    <script type="text/javascript">
        function SidebarModalShow(title, url, maxwidth, reloadonclose) {
            $('#sidebarModalDialog').css("max-width", maxwidth + "px");
            $('#sidebarLoading').show();
            $('#sidebarModal iframe').hide();
            $('#sidebarModal h5').text(title);
            $('#sidebarModal').modal('show');
            $('#sidebarModal iframe').attr("src", url);
            if (reloadonclose) {
                $("#btnSidebarClose").on('click', function () { SidebarModalHide(true); });
            } else {
                $("#btnSidebarClose").on('click', function () { SidebarModalHide(); });
            }
        }

        function SidebarModalHide(reload) {
            if (reload) {
                location.reload();
            } else {
                $('#sidebarModal').modal('hide');
                $('#sidebarModal iframe').attr("src", "about:blank");
            }
        }

        function SidebarLoadingHide() {
            $('#sidebarLoading').hide();
            $('#sidebarModal iframe').show();
        }
    </script>

